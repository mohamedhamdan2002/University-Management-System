@model EMS.Service.ViewModels.Course.CourseViewModel

@{
    ViewData["Title"] = "Delete";
    var divisionId = ViewBag.divisionId;

}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CourseViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Semester</dt>
        <dd class="col-sm-10">@Model.Semester</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="submit" value="Delete" asp-route-divisionId="@divisionId" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-controller="Course" asp-action="Index" asp-route-divisionId="@divisionId">Back to List</a>
    </form>
</div>
