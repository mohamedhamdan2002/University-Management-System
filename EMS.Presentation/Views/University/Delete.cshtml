@model EMS.Service.ViewModels.University.UniversityViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete University</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">University Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>

            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>

            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Model.Location
            </dd>

        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete">
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
