@model EMS.Service.ViewModels.Division.DivisionViewModel

@{
    ViewData["Title"] = "Delete";
    var departmentId = ViewBag.departmentId;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DivisionViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Id</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <strong>Name</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" asp-route-id="@Model.Id" asp-route-departmentId="@departmentId" class="btn btn-danger" /> |
        <a asp-controller="Division" asp-action="Index" asp-route-departmentId="@departmentId">Back to List</a>
    </form>
</div>
