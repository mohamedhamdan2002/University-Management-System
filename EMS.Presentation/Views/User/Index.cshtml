@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users page";
}

<h1>All Users</h1>
@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account">Add New User</a>
    foreach (var user in Model)
    {
        <hr>
        <div>
            <p>User ID: @user.Id</p>
            <p>User Name : @user.UserName</p>
            <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Edit</a>
            <a asp-action="Delete" asp-controller="User" asp-route-id="@user.Id">Delete</a>
        </div>
        <hr>
    }
}
else
{
    <div>
        <h5>No users Created yet in the system </h5>
        <hr>
        <a asp-action="Register" asp-controller="Account">Add New User</a>
    </div>
}