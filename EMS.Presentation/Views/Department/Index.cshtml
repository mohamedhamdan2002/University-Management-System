@model IEnumerable<EMS.Service.ViewModels.Department.DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
    var groupId = ViewBag.groupId;
}

<div class="container">
    <h1 class="mt-4">Department Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id"  asp-route-groupId="@groupId" class="btn btn-primary">Edit</a>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" asp-route-groupId="@groupId" class="btn btn-info">Details</a>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" asp-route-groupId="@groupId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
