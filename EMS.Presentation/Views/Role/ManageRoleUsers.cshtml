@model List<RoleUserViewModel>

@{
    ViewData["Title"] = "EditUserRole page";
    var roleId = ViewBag.roleId;
}

<h1>Add or Remove Users From This role</h1>
<div>
    <form method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div hidden>
                <input asp-for="@Model[i].UserId">
                <input asp-for="@Model[i].UserName">
            </div>
            <div>
                <input asp-for="@Model[i].IsSelected">
                <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
            </div>
        }
        <div>
            <button type="submit">Update</button>
            <a asp-action="Edit" asp-controller="Role" asp-route-id="@roleId">Cancel</a>
        </div>
    </form>
</div>