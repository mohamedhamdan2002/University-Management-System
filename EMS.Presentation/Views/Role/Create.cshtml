@model RoleForCreationViewModel
@{
    ViewData["Title"] = "Create Role Page";
}

<h1>Create Role</h1>
<div>
    <form method="post">
        <div>
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName"><br>
            <span asp-validation-for="RoleName"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <button type="submit">Create</button>
        </div>
    </form>
</div>