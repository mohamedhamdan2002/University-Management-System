@model UMS.Service.ViewModels.Group.GroupViewModel

@{
    ViewData["Title"] = "Delete";
    var facultyId = ViewBag.facultyId;
}

<div class="container">
    <h1 class="mt-4">Delete Group</h1>

    <div>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Scientific
            </dt>
            <dd class="col-sm-10">
                @Model.Scientific
            </dd>
        </dl>

        <form asp-action="Delete" class="mb-4">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Group" asp-action="Index" asp-route-facultyId="@facultyId" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
