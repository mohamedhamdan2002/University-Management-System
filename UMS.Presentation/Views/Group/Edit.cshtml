@model UMS.Service.ViewModels.Group.GroupForUpdateViewModel

@{
    ViewData["Title"] = "Edit";
    var facultyId = ViewBag.facultyId;
}

<div class="container">
    <h1 class="mt-4">Edit Group</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Scientific" class="control-label"></label>
                    <select asp-for="Scientific" class="form-control" asp-itUMS="Html.GetEnumSelectList<ScientificType>()">
                        <option value="" disabled selected hidden>Please Select</option>
                    </select>
                    <span asp-validation-for="Scientific" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" asp-route-facultyId="@facultyId" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Group" asp-action="Index" asp-route-facultyId="@facultyId" class="btn btn-primary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
