@model UMS.Service.ViewModels.Doctor.DoctorViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DoctorViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">National ID</dt>
        <dd class="col-sm-10">@Model.NationalID</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@if(Model.Courses is not null && Model.Courses.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Semester</th>
                <th>Credits</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Courses)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.Semester</td>
                    <td>@item.Credits</td>
                    <td>
                        <a class="btn btn-info" asp-controller="Course" asp-action="Details" asp-route-id="@item.Id" asp-route-divisionId="@item.divisionId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div>Not have Courses At this Moment</div>
}