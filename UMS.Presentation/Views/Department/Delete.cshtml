@model UMS.Service.ViewModels.Department.DepartmentViewModel

@{
    ViewData["Title"] = "Delete";
    var groupId = ViewBag.groupId;
}

<div class="container">
    <h1 class="mt-4">Delete Department</h1>

    <div>
        <h4>DepartmentViewModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <strong>Id</strong>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                <strong>Name</strong>
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <div class="form-group">
            <input type="submit" value="Delete" asp-route-id="@Model.Id" asp-route-groupId="@groupId" class="btn btn-danger" />
            <a asp-controller="Department" asp-action="Index" asp-route-groupId="@groupId" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
